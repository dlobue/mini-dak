# Import library

. archive-lib

######
# data validation functions

verify_symlink_attack ()
{
  changes_file=$1

  if [ -L $changes_file ]; then
    return 1
  else
    return 0
  fi
}

verify_size ()
{
  local changes_file=$1
  local changes_size=`stat -c "%s" $changes_file`

  if [ $changes_size -gt 100000 ]; then
    return 1
  else
    return 0
  fi
}

verify_gpg_signature ()
{
  local changes_file=$1
  local verify_result="`gpg $archive_keyrings --no-tty --status-fd=2 --verify $changes_file 2>&1`"

  if wrong=`echo "$verify_result" | grep '^\[GNUPG:\] BADSIG '`; then
    return 1
  elif good=`echo "$verify_result" | grep '^\[GNUPG:\] GOODSIG '`; then
    local signed_by="`echo "$good" | cut -d\  -f4-`"
    changes_strip < $changes_file \
      | formail -a"Signed-By: $signed_by" > $changes_file
    return 0
  else
    return 1
  fi
}

verify_dpkg_signature ()
{
  local changes_file=$1
  local files=`fetch_secure_files < $changes_file | grep '\.u\?deb$'`

  if [ "$use_dpkg_sig" != yes ]; then
    return 0
  fi

  for f in $files; do
    verify_result="`dpkg-sig --verify-role builder $f 2>&1`"

    if good=`echo "$verify_result" | grep '^GOODSIG '`; then
      :
    else
      return 1
    fi
  done

  return 0
}

verify_md5sums ()
{
  local changes_file=$1
  local md5sum=md5sum.textutils

  if ! which $md5sum >/dev/null; then
    md5sum=md5sum
  fi

  if fetch_md5sums < $changes_file | $md5sum -c >& /dev/null; then
    return 0
  else
    return 1
  fi
}

verify_suite ()
{
  local changes_file=$1
  local target_suite=`fetch_field "Distribution" < $changes_file`
  local c_target_suite=`canonic_suite $target_suite`

  for suite in $suite_list; do
    if [ "`canonic_suite $suite`" = "$c_target_suite" ]; then
      return 0
    fi
  done

  return 1
}

verify_arch ()
{
  local changes_file=$1
  local target_arches=`fetch_field "Architecture" < $changes_file`
  local suite=`fetch_field "Distribution" < $changes_file`

  for arch in $target_arches; do
    if ! valid_arch $suite $arch; then
      return 1
    fi
  done

  return 0
}

verify_multiarch_changes ()
{
  local changes_file=$1
  local target_arches=`fetch_field "Architecture" < $changes_file`
  local multiarch=`filter_real_arches $target_arches | wc -w`

  if [ $multiarch -gt 1 ]; then
    return 1
  elif [ "$multipool" = "yes" ] && [ $multiarch -eq 0 ]; then
    # This will happen when a pure arch:all .changes has been uploaded,
    # but because it lacks a normal arch we don't know in which pool to
    # put the arch:all packages.
    return 1
  else
    return 0
  fi
}

# file output

queue_accepted ()
{
  local changes_file=$1
  local signer=$2
  local files=`fetch_secure_files < $changes_file`
  local files_install="$files $changes_file"

  files_owner_perms $files_install

  if mv $files_install $accepted_dir; then
    log queue "mv_accepted_success ${changes_file##*/}"
    notice_accepted $changes_file "$files" "$signer"
    return 0
  else
    script_error "queue_accepted" "$?"
    log queue "mv_accepted_failed ${changes_file##*/}"
    return 1
  fi
}

queue_rejected ()
{
  local outcome=$1
  local changes_file=$2
  local signer=$3
  local files=

  mkdir -p $rejected_daily_dir

  if [ "$signer" ]; then
    files="`fetch_secure_files < $changes_file` $changes_file"
  else
    files=$changes_file
  fi

  if mv $files $rejected_daily_dir; then
    log queue "mv_rejected_success ${changes_file##*/}"
    notice_rejected $changes_file "$outcome" "$signer"
    return 0
  else
    script_error "queue_rejected" "$?"
    log queue "mv_rejected_failed ${changes_file##*/}"
    return 1
  fi
}

# message output

notice_rejected ()
{
  local changes_file=${1##*/}
  local outcome=$2
  local signer=$3

  ( cat <<-HERE
Uploader: $signer
Host: `hostname -f`
Rejected: $changes_file
Reason: $outcome
HERE
  ) | msg_queue "$changes_file REJECTED" "$signer"
}


notice_accepted ()
{
  local changes_file=${1##*/}
  local files=$2
  local signer=$3

  ( cat <<-HERE
Uploader: $signer
Host: `hostname -f`
Accepted: $changes_file
Files:
$files
HERE
  ) | msg_queue "$changes_file ACCEPTED" "$signer"
}

script_error ()
{
  # echo "$@" | mail -s "Error in `basename $0` ($1): $2" $archive_maint
  log queue "Error in `basename $0` ($1): $2"
}

#
# main
#

cd $incoming_dir

shopt -s nullglob

for changes_file in *.changes; do

  cd $incoming_dir

  if ! fuser $changes_file; then
    mv -f $changes_file $unchecked_dir/$changes_file

    changes_file=$unchecked_dir/$changes_file

    if ! verify_symlink_attack $changes_file; then
      queue_rejected "error-symlink-attack" $changes_file
      continue
    fi

    if ! verify_size $changes_file; then
      queue_rejected "toobig-changes-file" $changes_file
      continue
    fi

    if [ "${no_verify_gpg_signature:-0}" = 0 ] && ! verify_gpg_signature $changes_file; then
      queue_rejected "wrong-signature" $changes_file
      continue
    fi

    signer=`fetch_field "Signed-By" < $changes_file`

    if ! verify_dpkg_signature $changes_file; then
      queue_rejected "wrong-dpkg-signature" $changes_file "$signer"
      continue
    fi

    # Move the .archive contents to unchecked

    if archive_move secure "$changes_file" "$unchecked_dir"; then
      log queue "mv_unchecked_success ${changes_file##*/}"
    else
      log queue "mv_unchecked_failed ${changes_file##*/}"
      continue
    fi

    cd $unchecked_dir

    if ! verify_md5sums $changes_file; then
      queue_rejected "wrong-md5sums" $changes_file "$signer"
      continue
    fi

    if [ "${no_verify_suite:-0}" = 0 ] && ! verify_suite $changes_file; then
      queue_rejected "wrong-suite" $changes_file "$signer"
      continue
    fi

    if [ "${no_verify_arch:-0}" = 0 ] && ! verify_arch $changes_file; then
      queue_rejected "wrong-arch" $changes_file "$signer"
      continue
    fi

    if [ "${no_verify_multiarch_changes:-0}" = 0 ] && ! verify_multiarch_changes $changes_file; then
      queue_rejected "wrong-multiarch-changes" $changes_file "$signer"
      continue
    fi

    queue_accepted $changes_file "$signer"
  fi
done

cd - >/dev/null
